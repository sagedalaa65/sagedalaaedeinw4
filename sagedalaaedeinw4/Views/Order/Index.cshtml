@model IEnumerable<sagedalaaedeinw4.Models.entities.Order>

<table class="table table-bordered">

    <thead>
        <tr>
            <td>Id</td>
            <td>CustomerId</td>
            <td>OrderDate</td>
            <td>TotalAmount</td>
            <td>Status</td>
            <td>order details</td>
        </tr>
    </thead>


    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CustomerId</td>
                <td>@order.OrderDate</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("OrderDetails", "Order", new { id = order.Id })" class="btn btn-secondary">Show Order details</a>

                </td>


            </tr>
        }

    </tbody>
</table>